<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TitleBarStyle">
        <item name="android:background">@drawable/bkg_center_pressed</item>
    </style>
    
    <style name="CustomerDetailName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="cmName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="cmDetail">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="CustomerDetailLoan">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="AddCustomerLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="SettingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="AddCustomerContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="PushUpAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    </style>
    
    <style name="list_head">
      <item name="android:textSize">16sp</item>
      <item name="android:textColor">@color/follow_text_normal</item>
      <item name="android:textStyle">bold</item>
  </style>
  
  <style name="list_other">
      <item name="android:textSize">12sp</item>
      <item name="android:textColor">@color/follow_text_normal</item>
  </style>

</resources>
