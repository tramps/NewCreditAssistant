<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TitleBarStyle">
        <item name="android:background">@drawable/bkg_center_pressed</item>
    </style>
    
    <style name="CustomerDetailName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="cmName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    
    <style name="cmDetail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_label</item>
    </style>
    
    <style name="cmDDetail">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_label</item>
    </style>
    
    <style name="CustomerDetailLoan">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="AddCustomerLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="AdvancedLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="AdvancedContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="Login">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/customer_label</item>
    </style>
    
    <style name="Option">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="SettingText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="AddCustomerContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/customer_content</item>
    </style>
    
    <style name="PushUpAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    </style>
    
    <style name="ActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>
    
    <style name="BottomAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/top_in</item>
        <item name="android:activityOpenExitAnimation">@anim/down_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/top_out</item>
    </style>
    
    <style name="list_head">
      <item name="android:textSize">16sp</item>
      <item name="android:textColor">@color/customer_content</item>
  </style>
  
  <style name="list_other">
      <item name="android:textSize">13sp</item>
      <item name="android:textColor">@color/customer_label</item>
  </style>

</resources>
