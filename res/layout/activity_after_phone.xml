<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:layout_gravity="center"
	android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bkg_pop_alam"
	   	android:layout_gravity="center"
	   	android:gravity="center"
	   	android:paddingLeft="15dp"
	   	android:paddingBottom="15dp"
	    >
	    
	    <ImageButton 
	        android:id="@+id/btnClose"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/ic_pop_close"
	        />
	    
	    <TextView 
	        android:id="@+id/tvName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textColor="@android:color/white"
	        android:text="sdf"
	        android:textSize="18sp"
	        />
	
	    <TextView 
	        android:id="@+id/tvComment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tvName"
	        android:textSize="16sp"
	        style="@style/cmDetail"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:layout_marginRight="15dp"
	        android:layout_alignLeft="@id/tvName"
	        android:layout_toLeftOf="@id/tvProgress"
	        android:layout_marginTop="10dp"
	        android:text="sdf"
	        />
	    
	    <View 
	        android:id="@+id/divider"
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@drawable/divider_popup"
	        android:layout_below="@id/tvComment"
	        android:layout_toLeftOf="@id/btnClose"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        />
	    
	    <TextView 
	        android:id="@+id/tvLast"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/divider"
	        style="@style/cmDetail"
	        android:text="sdf"
	        />
	    
	    <Button 
	        android:id="@+id/btnAction"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/bkg_white"
	        android:layout_below="@id/tvLast"
	        android:layout_marginRight="25dp"
	        android:layout_centerVertical="true"
	        android:text="查看该客户"
	        />

	    <TextView
	        android:id="@+id/tvProgress"
	        style="@style/cmDetail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/tvComment"
	        android:text="sdf"
	        android:layout_alignRight="@+id/btnClose"
	        android:layout_marginRight="20dp"/>

	</RelativeLayout>

</LinearLayout>