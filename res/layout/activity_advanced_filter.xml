<?xml version="1.0" encoding="utf-8"?>
<com.rong360.creditassitant.widget.MySrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:orientation="vertical"
        android:paddingBottom="45dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/bkg_round"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvStar"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="是否标星" />

                <TextView
                    android:id="@+id/tvCStar"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/tvStar"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:layout_alignBottom="@id/tvStar"
                    android:layout_marginRight="40dp"
                    android:gravity="right" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCStar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlInputTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="录入时间" />

                <TextView
                    android:id="@+id/tvCTime"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvTime"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvTime"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:inputType="phone"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvTime"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bkg_round"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvProgress"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="客户进度" />

                <TextView
                    android:id="@+id/tvCProgress"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvProgress"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvProgress"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvProgress"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvSource"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="客户来源" />

                <TextView
                    android:id="@+id/tvCSource"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvSource"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvSource"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvSource"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bkg_round"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvBank"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="银行流水(元)" />

                <TextView
                    android:id="@+id/tvCBank"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvBank"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvBank"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvBank"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan_option_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBank"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvCash"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="现金流水(元)" />

                <TextView
                    android:id="@+id/tvCCash"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCash"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvCash"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCash"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan_optional_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCash"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvIdentity"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="身份" />

                <TextView
                    android:id="@+id/tvCIdentity"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvIdentity"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:duplicateParentState="true"
                    android:layout_toRightOf="@id/tvIdentity"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvIdentity"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan_optional_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIdentity"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlCreditRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvCreditRecord"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="信用记录" />

                <TextView
                    android:id="@+id/tvCCreditRecord"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCreditRecord"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:duplicateParentState="true"
                    android:layout_toRightOf="@id/tvCreditRecord"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCreditRecord"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan_optional_cr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCreditRecord"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvHouse"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="房产" />

                <TextView
                    android:id="@+id/tvCHouse"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvHouse"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvHouse"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvHouse"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_loan_optional_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHouse"
                android:background="@drawable/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/rlCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bkg_section"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvCar"
                    style="@style/AdvancedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="车辆" />

                <TextView
                    android:id="@+id/tvCCar"
                    style="@style/AdvancedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCar"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/tvCar"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvCar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</com.rong360.creditassitant.widget.MySrollview>